server {
    server_name api.activautossgc.org;
    
    # Límite de tamaño de archivos
    client_max_body_size 30M;
    
    # Logs
    access_log /var/log/nginx/api.activautossgc.org.access.log;
    error_log /var/log/nginx/api.activautossgc.org.error.log;
    
    # Proxy hacia Node.js
    location / {
        proxy_pass http://localhost:3333;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts aumentados para archivos grandes
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        client_body_timeout 300s;
    }
    
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api.activautossgc.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.activautossgc.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = api.activautossgc.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    
    listen 80;
    server_name api.activautossgc.org;
    return 404; # managed by Certbot
}
